@namespace BootstrapBlazor.Components
@inherits BootstrapComponentBase

<span @attributes="@AdditionalAttributes" class="@ClassName">
    @if(IsText) 
    {
        @Text
    }
    else if(IsIcon) 
    {
        <i @onclick="@OnClick" class="@Icon"></i>
    }
    else 
    {
        <img @onclick="OnClick" src="@Url" class="@ImgClassString" @onerror="@OnError" @onload="@OnLoad" />
    }
</span>
