@namespace BootstrapBlazor.Components
@typeparam TValue
@inherits BootstrapInputEventBase<TValue>

@if (IsShowLabel)
{
    <BootstrapLabel Value="@DisplayText" ShowLabelTooltip="ShowLabelTooltip" required="@Required" for="@Id" />
}
<div style="position:relative;">
    <input @onfocus="OnFocusAsync"
           @attributes="@AdditionalAttributes" type="@Type" placeholder="@PlaceHolder" id="@Id" readonly="@ReadonlyString" class="@ClassName" disabled="@Disabled" @bind-value="CurrentValueAsString" @bind-value:event="@EventString" @ref="FocusElement" />
    @if(Icon != null)
    {
        <i class="@Icon" style="position:absolute;
                                right: 12px;
                                top: 0.7rem;" />
    }
</div>

