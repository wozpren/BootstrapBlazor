@namespace BootstrapBlazor.Components
@using Microsoft.AspNetCore.Components.Authorization
@inherits BootstrapModuleComponentBase
@attribute [BootstrapModuleAutoLoader(JSObjectReference = true)]

<CascadingValue Value="this" IsFixed="true">
<AuthorizeView>
    <Authorized>
            <section @attributes="AdditionalAttributes" class="@ClassString">
                @if (Side == null)
                {
                    @RenderHeader(false)
                    @RenderMain
                    @if (ShowFooter)
                    {
                        @RenderFooter
                    }
                }
                else if (IsFullSide)
                {
                    <aside class="@SideClassString" style="@SideStyleString">
                        @Side
                        @if (Menus != null)
                        {
                            @RenderMenu(IsFullSide)
                        }
                    </aside>
                    <section class="layout-right">
                        @RenderHeader(ShowCollapseBar)
                        @RenderMain
                        @if (ShowFooter)
                        {
                            @RenderFooter
                        }
                    </section>
                }
                else
                {
                    @RenderHeader(ShowCollapseBar)
                    <section class="has-sidebar">
                        <aside class="@SideClassString" style="@SideStyleString">
                            @Side
                            @if (Menus != null)
                            {
                                @RenderMenu(IsFullSide)
                            }
                        </aside>
                        @RenderMain
                    </section>
                    @if (ShowFooter)
                    {
                        @RenderFooter
                    }
                }
            </section>
    </Authorized>
    <NotAuthorized>
        @NotAuthorized
    </NotAuthorized>      
</AuthorizeView>
</CascadingValue>

@code {
    RenderFragment<bool> RenderHeader => collapse =>
    @<header class="@HeaderClassString">
        @if (collapse)
        {
            @if (CollapseBarTemplate == null)
            {

            }
            else
            {
                @CollapseBarTemplate
            }
        }
        @Header
    </header>;

    RenderFragment<bool> RenderMenu => hasScroll =>
    @<div class="layout-menu">
        <LinkButton class="@CollapseBarClassString" OnClick="CollapseMenu" Color="Color.Dark"
                    data-bs-toggle="tooltip" data-bs-placement="right" data-bs-original-title="@TooltipText" Icon="fa-solid fa-bars" />
        @if (hasScroll)
        {
            <Scroll>
                <Menu Items="@Menus" IsVertical="true" IsCollapsed="@IsCollapsed" IsAccordion="@IsAccordion" OnClick="@ClickMenu()"></Menu>
            </Scroll>
        }
        else
        {
            <Menu Items="@Menus" IsVertical="true" IsCollapsed="@IsCollapsed" IsAccordion="@IsAccordion" OnClick="@ClickMenu()"></Menu>
        }
    </div>;

    RenderFragment RenderMain =>
    @<main class="@MainClassString">
        @if (UseTabSet)
        {
            <Tab ClickTabToNavigation="true" ShowExtendButtons="false" ShowClose="true" AllowDrag="AllowDragTab" IsCard="@true"
                 AdditionalAssemblies="@AdditionalAssemblies" NotFoundTabText="@NotFoundTabText"
                 DefaultUrl="@TabDefaultUrl" ExcludeUrls="@ExcludeUrls" IsOnlyRenderActiveTab="IsOnlyRenderActiveTab"
                 Body="@Main" NotAuthorized="NotAuthorized!" NotFound="NotFound!" />
        }
        else
        {
            @HandlerMain()
        }
    </main>;

    RenderFragment RenderFooter =>
    @<footer class="@FooterClassString">
        @Footer
        @if (ShowGotoTop)
        {
            <GoTop />
        }
    </footer>;
}
